---
interface Props {
  showAuth?: boolean;
}

const { showAuth = false } = Astro.props;
---

<header class="bg-green shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo with Artistic Touch -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3 group">
          <div class="w-10 h-10 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
            </svg>
          </div>
          <div class="flex flex-col">
            <span class="text-xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
              The Joy of Editing PDF
            </span>
            <span class="text-xs text-gray-500 italic">Fix your documents with ease</span>
          </div>
        </a>
      </div>

      <!-- Navigation -->
      {showAuth && (
        <nav class="flex items-center space-x-4">
          <a href="/signin" class="text-gray-600 hover:text-purple-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-300 hover:bg-purple-50">
            ðŸŽª Sign In
          </a>
          <a href="/signup" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white px-6 py-2 rounded-full text-sm font-bold transition-all duration-300 transform hover:scale-105 shadow-lg">
            ðŸŽ¨ Create an account
          </a>
        </nav>
      )}
    </div>
  </div>
</header>